  <style>
    .category-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 1em;
      padding: 2em 1em;
    }

    .category-grid a {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-decoration: none;
      background-color: #ffffff;
      padding: 1em;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s;
    }

    .category-grid a:hover {
      transform: scale(1.05);
    }

    .category-grid img {
      width: 100%;
      max-width: 120px;
      height: auto;
      margin-bottom: 0.5em;
      border-radius: 6px;
    }
  </style>

</head>

